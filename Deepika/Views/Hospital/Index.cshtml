@model IEnumerable<Hospital>
@{
    ViewData["Title"] = "Index";
}
  <a asp-action="Create">Create a Hospital</a>
<h2>Here is the list of Hospitals</h2>
<table style="width:50%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Speciality</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hospital e in Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Address</td>
                <td>@e.Speciality</td>
                <td><a asp-action="Update" asp-route-hospname="@e.Name">Update</a></td>
                <td>
                    <form asp-route-hospname="@e.Name" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>